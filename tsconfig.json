{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "target": "es2020",
    "module": "commonjs",
    "allowJs": true,
    "lib": ["ES6"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }, 
  "include": ["./src/**/*"]
}
